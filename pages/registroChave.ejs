<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Registrar Chave</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row mb-3 mt-2">
            <header class="d-flex justify-content-center py-3">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a href="login" class="nav-link active" aria-current="page">Login</a></li>
                    <li class="nav-item"><a href="chaves" class="nav-link">Chaves</a></li>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Registros
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="registroChave">Nova chave</a></li>
                        </ul>
                    </div>
                </ul>
            </header>
        </div>

        <div class="row mt-3">
            <div class="col-6 offset-3">
                <form id="formChave">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="chave" placeholder="CHAVE XX">
                        <label for="chave">Insira o nome da chave (CHAVE XX)</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="sala" placeholder="SALA DE EXEMPLO">
                        <label for="sala">Insira o nome da sala (SALA DE EXEMPLO)</label>
                    </div> <br>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $('#formChave').submit(function (e) {
            e.preventDefault()

            var nomeNovo = $('#chave')
            var salaNova = $('#sala')
            var key = {
                nome: nomeNovo.val(),
                sala: salaNova.val(),
                disponibilidade: false
            }

            var bodyKey = JSON.stringify(key);

            $.ajax({
                url: '/api/registrochave',
                type: 'post',
                data: bodyKey,
                contentType: 'application/json',
            }).done((data) => {
                console.log(data);

                if (data.created) {
                    alert('Chave criada com sucesso')
                    nomeNovo.val('')
                    salaNova.val('')
                }
            }).fail((error) => {
                alert('Chave inv√°lida ou vazia')
                console.log(error);
            })
        })
    </script>
</body>

</html>